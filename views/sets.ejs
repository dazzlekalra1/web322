<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/main.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection</title>
  </head>
  <body>
    <%- include('partials/navbar', {page: '/lego/sets'}) %>
    <div class="container mx-auto p-4">
      <div class="hero rounded-lg p-6 bg-base-200">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Collection</h1>
            <p class="py-6">
              Browse the entire collection. Click the theme to filter by themes
              such as:

              <a class="btn btn-primary btn-xs" href="/lego/sets?theme=Technic"
                >Technic</a
              >
              <a
                class="btn btn-primary btn-xs"
                href="/lego/sets?theme=Classic Town"
                >Classic Town</a
              >
              <a
                class="btn btn-primary btn-xs"
                href="/lego/sets?theme=Supplemental"
                >Supplemental</a
              >
            </p>
          </div>
        </div>
      </div>
      <div
        class="container mx-auto pt-4 px-10 overflow-x-auto overflow-y-hidden"
      >
        <table class="table table-zebra">
          <tbody>
            <% allSets.forEach((set) => { %>
            <tr>
              <td>
                <div class="avatar">
                  <div
                    class="w-32 h-32 rounded-lg bg-transparent bg-no-repeat bg-cover"
                    style="background-image: url('<%=set.img_url%>')"
                  ></div>
                </div>
              </td>
              <td>
                <%= set.name %> |
                <a
                  href="/lego/sets?theme=<%=set.Theme.name%>"
                  class="btn mt-2 btn-xs"
                >
                  <%=set.Theme.name%></a
                >
              </td>
              <td>
                <span class="font-bold">Year: </span><%= set.year%>
                <span class="font-bold">Parts: </span><%= set.num_parts%>
              </td>
              <th>
                <a href="/lego/sets/<%=set.set_num%>" class="btn btn-xs"
                  >Details</a
                >
              </th>
            </tr>

            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
