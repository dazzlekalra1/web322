<!DOCTYPE html>
<html lang="en">
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      fetch('https://quotable.io/random')
        .then((res) => res.json())
        .then((data) => {
          const quote = {
            content: data.content,
            author: data.author,
          };
          document.getElementById('quote').innerHTML = `
              <span>
                ${quote.content}
                <br />
                - <em id="author">${quote.author}</em>
              </span>`;
        });
    });
  </script>
  <head>
    <link rel="stylesheet" href="/css/main.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection</title>
  </head>
  <body>
    <%- include('partials/navbar', {page: ''}) %>
    <br />
    <div class="container mx-auto p-4">
      <div class="hero rounded-lg p-6 bg-base-200">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold"><%=set.name%></h1>
            <p class="py-6">
              Below, you will find detailed information about the set:
              <%=set.name%>
            </p>
          </div>
        </div>
      </div>
      <br />
      <!--  -->
      <div class="grid grid-cols-1 grid-cols-2 gap-6">
        <div>
          <img
            class="w-full rounded-lg"
            src="<%=set.img_url%>"
            alt="Squat Rack"
          />
        </div>
        <div class="prose">
          <span class="font-bold">Set Name: </span> <%=set.name%> <br />
          <span class="font-bold">Year Released: </span> <%=set.year%> <br />
          <span class="font-bold">Theme: </span> <%=set.Theme.name%> <br />
          <span class="font-bold">Number of Parts: </span> <%=set.num_parts%>
          <br />
          <br />
          <span id="quote"> </span>
          <br />
          <br />
          <% if(session.user){ %>
          <a
            href="/lego/editSet/<%=set.set_num%>"
            class="btn btn-primary btn-sm"
            >EDIT SET: <%= set.name%></a
          >
          <% } %>
          <a
            href="#"
            class="btn btn-primary btn-sm"
            onclick="history.back(); return false"
            >RETURN</a
          >
        </div>
      </div>
      <!--  -->
    </div>
  </body>
</html>
