<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/main.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection</title>
  </head>
  <body>
    <%- include('partials/navbar', {page: '/userHistory'}) %>
    <div class="container mx-auto p-4">
      <div class="hero rounded-lg p-6 bg-base-200">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
            <p class="py-6">User History: <%= session.user.email%></p>
          </div>
        </div>
      </div>
      <br />
      <table class="table table-zebra">
        <thead>
          <tr>
            <th>Login Date/Time</th>
            <th>Client Information</th>
          </tr>
        </thead>
        <tbody>
          <% session.user.loginHistory.forEach((login) => { %>
          <tr>
            <td><%= login.dateTime %></td>
            <td><%= login.userAgent %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <br />
      <% if(errorMessage){ %>
      <div class="alert alert-error">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="stroke-current shrink-0 h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
        <span><%= errorMessage %></span>
      </div>
      <% } %> <% if(successMessage){ %>
      <div class="alert">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="stroke-current shrink-0 h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
        <span><%= successMessage %></span>
      </div>
      <br />
      <a href="/login" class="btn btn-success"> Proceed to Log in </a>

      <% } %>
    </div>
  </body>
</html>
